<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signInLogIn_color"
    style="@style/scrollbar"
    tools:context=".Login.LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ThemeOverlay.AppCompat.Dark">

            <Button
                android:id="@+id/login_Backbutton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:drawableStart="@drawable/ic_back"
                android:gravity="center"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="@string/loginPage"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <!--application src logo -->
        <LinearLayout
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="13dp">

            <ImageView
                android:id="@+id/signup_Logo"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:contentDescription="@string/contentDescription"
                android:src="@drawable/applogo" />
        </LinearLayout>

        <!--Relative layout of edit textbox, tickbox and button-->
        <!--<RelativeLayout
            android:id="@+id/RelativeLayoutOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:layout_marginBottom="72dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/RelativeLayoutTwo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_image"-->

        <!--app:layout_constraintBottom_toTopOf=""-->
        <!-- User text input start here-->  <!--android input type android.support.v7.widget.AppCompatEditText-->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_below="@+id/background_image">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgViewOne"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="32dp"
                    android:background="@color/colorPrimary"
                    android:padding="1dp"
                    android:src="@drawable/ic_account" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/login_Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_toEndOf="@+id/imgViewOne"
                    android:background="@drawable/edittext_radius"
                    android:hint="@string/loginHint_Username"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorSecondary"
                    android:textColorHint="#d3d3d3"
                    android:textSize="16sp" />
            </RelativeLayout>
            <!--<RelativeLayout
            android:id="@+id/RelativeLayoutTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="258dp"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgViewTwo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:src="@drawable/ic_password" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/login_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgViewTwo"
                    android:background="@drawable/edittext_radius"
                    android:hint="@string/loginHint_Password"
                    android:inputType="text"
                    android:padding="9dp"
                    android:textColor="@color/colorSecondary"
                    android:textColorHint="#d3d3d3"
                    android:textSize="16sp" />
            </RelativeLayout>

            <!--RelativeLayout
            android:id="@+id/relativeLayoutThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RelativeLayoutTwo"-->

            <!--change the android:text color later-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <CheckBox
                    android:id="@+id/login_passwordShowHide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="32dp"
                    android:text="@string/loginPasswordshow"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/passwordForget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:text="@string/passwordForget"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linearLayout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:padding="20dp">

            <Button
                android:id="@+id/login_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_radius"
                android:text="@string/loginButton"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_Signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_Button"
                android:layout_marginTop="19dp"
                android:linksClickable="true"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/login_signupOption"
                android:textAlignment="center"
                android:textColor="@color/Unlink_black"
                android:textColorLink="@color/link_Blue"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>